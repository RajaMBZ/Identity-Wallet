{
	"extends": ["standard", "prettier", "prettier/standard", "plugin:react/recommended"],
	"plugins": ["prettier", "standard", "mocha", "react", "jest"],
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"parser": "babel-eslint",
	"env": {
		"es6": true,
		"node": true,
		"mocha": true,
		"jest": true
	},
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"semi": true,
				"endOfLine": "auto"
			}
		],
		"react/prop-types": 0,
		"import/no-named-as-default": 0
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
