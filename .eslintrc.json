{
    "extends": [
       "standard",
       "prettier",
       "prettier/standard",
       "plugin:react/recommended"
    ],
    "plugins": [
       "prettier",
       "standard",
       "mocha",
       "react"
    ],
    "parserOptions": {
       "sourceType": "module",
       "ecmaFeatures": {
         "jsx": true
       }
    },
    "env": {
       "es6": true,
       "node": true,
       "mocha": true
    },
    "rules": {
       "prettier/prettier": [
          "error",
          {
             "singleQuote": true,
             "semi": true
          }
       ]
    }
 }
